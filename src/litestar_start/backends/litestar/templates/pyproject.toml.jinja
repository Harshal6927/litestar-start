[project]
name = "{{ project_slug }}"
version = "0.1.0"
description = "{{ description }}"
requires-python = ">=3.13"
dependencies = [
{% for dep in dependencies | sort %}
    "{{ dep }}",
{% endfor %}
]

[build-system]
requires = ["hatchling"]
build-backend = "hatchling.build"

[tool.hatch.build.targets.wheel]
packages = ["app"]

[tool.ruff]
line-length = 120

[tool.ruff.lint]
select = ["ALL"]
ignore = ["CPY001", "D100", "D104"]

[tool.pytest.ini_options]
testpaths = ["tests"]
pythonpath = ["."]
