# {{ project_name }} Environment Variables

# Application
APP_NAME={{ project_slug }}
APP_ENV=development
DEBUG=true

# Backend API
BACKEND_URL=http://localhost:8000
FRONTEND_URL=http://localhost:3000

# Database (adjust based on your database choice)
# PostgreSQL
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/{{ project_slug }}

# Or MongoDB
# MONGODB_URL=mongodb://localhost:27017/{{ project_slug }}

# Or MySQL
# DATABASE_URL=mysql://user:password@localhost:3306/{{ project_slug }}

# Or SQLite
# DATABASE_URL=sqlite:///./app.db

# Authentication (if enabled)
SECRET_KEY=your-secret-key-change-in-production
JWT_SECRET=your-jwt-secret-change-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_MINUTES=30

# CORS
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# Docker Environment
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB={{ project_slug }}
